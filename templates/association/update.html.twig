{% extends 'base.html.twig' %}

{% block title %}Modifier une association
{% endblock %}

{% block body %}
	<h1>
		Modifier
		{{ associationName }}
	</h1>

	<hr>

	{{ form_start(updateAssociationForm) }}

	{% block form_row %}
		<div class="row">
			<div class="col-4">
				{{ form_label(updateAssociationForm.name) }}
				{{ form_widget(updateAssociationForm.name) }}
			</div>
			<div class="col-4">
				{{ form_label(updateAssociationForm.email) }}
				{{ form_widget(updateAssociationForm.email) }}
			</div>
			<div class="col-4">
				{{ form_label(updateAssociationForm.telephone) }}
				{{ form_widget(updateAssociationForm.telephone) }}
			</div>
		</div>
	{% endblock form_row %}
	<div class="row">
		<div class="col text-center">
			{{ form_widget(updateAssociationForm.submit) }}
		</div>
	</div>
	{{ form_end(updateAssociationForm) }}
{% endblock %}
