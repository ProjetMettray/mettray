{% extends 'base.html.twig' %}

{% block title %}Hello AssociationController!
{% endblock %}

{% block body %}
	<div class="container text-center mt-5 bg-dark">
		<h1 class="p-5 text-white">Liste des Associations</h1>
		<div class="d-flex start-flex p-4 ">
			<label class="text-white " for="search">Recherche</label>
			<input name="search" type="text">
			<input type="submit">
		</div>
		<table class="table table-striped table-success table-hover">
			<thead>
				<tr class="table-success">
					<th scope="col">Id</th>
					<th scope="col">Nom de l'association</th>
					<th scope="col">Numéro de téléphone</th>
					<th scope="col">Email</th>
					<th scope="col">Modifier</th>
				</tr>
			</thead>
			<tbody>
				{% for association in associations %}
					<tr class="table-active ts">
							<td scope="row">{{ association.id }}</td>
							<td>{{ association.name }}</td>
							<td>{{ association.telephone }}</td>
							<td>{{ association.email }}</td>
							<td>
							<a href="{{ path("association_update", {"association": association.id}) }}" type="button" class="btn btn-outline-success">Modifier</a>
							</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
	</div>
{% endblock %}
