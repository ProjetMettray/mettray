{% extends 'base.html.twig' %}

{% block body %}

	<div class="container">
		<h1>Experience</h1>
		<table class="table">
			<tbody>
				<tr>
					<th>Nom de la Entreprise</th>
					<td>{{ experience.company }}</td>
				</tr>
				<tr>
					<th>Date de début</th>
					<td>{{ experience.startAt|date('d/m/Y') }}</td>
				</tr>
				<tr>
					<th>Date de fin</th>
					<td>{{ experience.endAt|date('d/m/Y') }}</td>
				</tr>
				<tr>
					<th>Détails</th>
					<td>{{ experience.details }}</td>
				</tr>
			</tbody>
		</table>
		<a class="btn btn-primary" href="{{ path('experience_edit', {"id": experience.id}) }}">Modifier les informations du profil</a>
		{{ include('experience/_delete_form.html.twig') }}
		<a href="{{ path('experience') }}">Retour à la liste</a>
	</div>
</div>{% endblock %}
