{% extends 'base.html.twig' %}

{% block title %}Hello User!
{% endblock %}

{% block body %}
	{% for user in users %}
		{% if user.id == app.user.id %}
			<h2 class="text-center m-2">Bienvenue
				{{user.Firstname}}</h2>
			<div class="container m-3">
				<div class="row">
					<div class="col-3">
						<div class="card" style="width: 18rem;">
							<img src="https://picsum.photos/200" class="rounded-circle">
							<div class="card-body">
								<h5 class="card-title">Username:
									{{user.firstname}}
									{{user.lastname}}
								</h5>
								<p class="card-text">Email:
									{{user.email}}</p>
							</div>
						</div>
					</div>
				</div>
			</div>
		{% endif %}
	{% endfor %}
{% endblock %}
