{% extends 'base.html.twig' %}

{% block title %}
Liste des localisations | Mettray

{% block body %}
	<div class="container text-center mt-5 bg-dark">
		<h1 class="p-5 text-white">Liste des adresses</h1>
		<div class="d-flex start-flex p-4 ">
			<label class="text-white " for="search">Recherche</label>
			<input name="search" type="text">
			<input type="submit">
		</div>
		<table class="table table-striped table-success table-hover">
			<thead>
				<tr class="table-success">
					<th scope="col">Id</th>
					<th scope="col">Nom du batiment</th>
					<th scope="col">Code postal</th>
					<th scope="col">Rue</th>
					<th scope="col">Ville</th>
					<th scope="col">Modifier</th>
				</tr>
			</thead>
			<tbody>
				{% for location in locations %}
					<tr class="table-active ts">
						<td scope="row">{{ location.id }}</td>
						<td>{{ location.name }}</td>
						<td>{{ location.cp }}</td>
						<td>{{ location.road }}</td>
						<td>{{ location.city }}</td>
						<td>
							<a href="{{ path("location_update", {"id": location.id}) }}" type="button" class="btn btn-outline-success">Modifier</a>
						</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
	</div>
{% endblock %}
