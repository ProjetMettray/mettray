{{ form_start(bookingForm) }}

{% set formErrors = bookingForm.start_at.vars.errors.form.getErrors(true) %}

{# If there are errors in the form, display them in this unorganized list #}
{% if formErrors|length %}
	<div class="alert alert-danger">
		{% for error in formErrors %}
			{{ error.message }}
		{% endfor %}
	</div>
{% endif %}
{% block form_row %}
	<div class="row">
		<div class="col-3">
			{{ form_label(bookingForm.title) }}
			{{ form_widget(bookingForm.title) }}
		</div>
		<div class="col-3">
			{{ form_label(bookingForm.start_at) }}
			{{ form_widget(bookingForm.start_at) }}
		</div>
		<div class="col-3">
			{{ form_label(bookingForm.end_at) }}
			{{ form_widget(bookingForm.end_at) }}
		</div>
		<div class="col-3">
			{{ form_label(bookingForm.room) }}
			{{ form_widget(bookingForm.room) }}
		</div>
	</div>
{% endblock form_row %}
<div class="row">
	<div class="col text-center">
		{{ form_widget(bookingForm.submit) }}
	</div>
</div>
{{ form_end(bookingForm) }}
