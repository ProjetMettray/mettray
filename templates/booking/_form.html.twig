{{ form_start(bookingForm) }}

{% set formErrors = bookingForm.start_at.vars.errors.form.getErrors(true) %}

{# If there are errors in the form, display them in this unorganized list #}
{% if formErrors|length %}
	<div class="alert alert-danger">
		{% for error in formErrors %}
			{{ error.message }}
		{% endfor %}
	</div>
{% endif %}
{% block form_row %}
	<div class="row my-5 text-ter">
		<div class="col-6 my-3">
			{{ form_label(bookingForm.title) }}
			{{ form_widget(bookingForm.title) }}
		</div>
		<div class="col-6 my-3">
			{{ form_label(bookingForm.association) }}
			{{ form_widget(bookingForm.association) }}
		</div>
		<div class="col-6 my-3">
			{{ form_label(bookingForm.start_at) }}
			{{ form_widget(bookingForm.start_at) }}
		</div>
		<div class="col-6 my-3">
			{{ form_label(bookingForm.end_at) }}
			{{ form_widget(bookingForm.end_at) }}
		</div>
		<div class="col-6 my-3">
			{{ form_label(bookingForm.starttime) }}
			{{ form_widget(bookingForm.starttime) }}
		</div>
		<div class="col-6 my-3">
			{{ form_label(bookingForm.endtime) }}
			{{ form_widget(bookingForm.endtime) }}
		</div>
		<div class="col-12 my-3 border border-ter rounded-3 p-3 text-white bg-prim">
			{{ form_label(bookingForm.days) }}
			{{ form_widget(bookingForm.days) }}
		</div>
		<div class="col-12 my-3 text-center">
			{{ form_label(bookingForm.submit) }}
			{{ form_widget(bookingForm.submit) }}
		</div>
	</div>
	{{ form_end(bookingForm) }}
</div>
{% endblock form_row %}

