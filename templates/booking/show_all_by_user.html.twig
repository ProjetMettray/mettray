{% extends 'base.html.twig' %}

{% block title %}Event
{% endblock %}

{% block body %}

	<div class="container text-center mt-5 bg-dark">
		<h1 class="p-5 text-white">Liste des RÃ©servation</h1>
		<div class="d-flex start-flex p-4 ">
			<label class="text-white " for="search">Recherche</label>
			<input name="search" type="text">
			<input type="submit">
		</div>
		{{ dump(userId) }}
		{{ dump(userAssociations) }}
		{{ dump(bookingsByAssociation) }}
		{% for name,association in bookingsByAssociation %}
			<ul class="p-4">
				<h1>{{ name }}</h1>
				{% for booking in association %}
					<li class="row bg-white m-2 rounded">
						<p class="col-3">{{ booking.title }}</p>
						<p class="col-3">{{ booking.startAt|date('Y-m-d') }}</p>
						<p class="col-3">{{ booking.endAt|date('Y-m-d') }}</p>
						<p class="col-3">{{ booking.status }}</p>
					</li>
				{% endfor %}
			</ul>
		{% endfor %}
	</div>

{% endblock %}
