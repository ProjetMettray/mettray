{% extends 'base.html.twig' %}

{% block title %}La mairie de Mettray | Mes réservations
{% endblock %}

{% block body %}
	{% if bookingsByAssociation|length > 0 %}
		<div class="container text-center mt-5 pb-2 bg-white border border-ter rounded">
			<h1 class="p-5 text-ter">Mes Réservations</h1>
			<div class="d-flex start-flex p-4 "></div>

			{% for name,association in bookingsByAssociation %}
				<table class="table table-striped table-perso table-hover">
					<thead>
						<tr class="table-perso">
							<th scope="col">N°</th>
							<th scope="col">Type de réservation</th>
							<th scope="col">Date de début</th>
							<th scope="col">Date de fin</th>
							<th scope="col">Salle</th>
							<th scope="col">Status</th>
							<th scope="col">Nom de l'association</th>
							<th scope="col">Modifier</th>
							<th scope="col">Supprimer</th>
						</tr>
					</thead>
					<tbody>
						{# {% if room|length > 0 %} #}
						{% for booking in association %}
							<tr class="table-active ts">
								<td>{{booking.id}}</td>
								<td>{{booking.title}}</td>
								<td>{{booking.startAt|date('d/m/Y')}}</td>
								<td>{{booking.endAt|date('d/m/Y')}}</td>
								<td>{{booking.getRoom().getName()}}</td>
								<td>{{booking.status}}</td>
								<td>
									{% if booking.getAssociation() %}
										{{booking.getAssociation().getName()}}
									{% endif %}
								</td>
								<td>
									<a href="{{ path("booking_edit", {"id": booking.id}) }}" type="button" class="btn fc-button-primary">Modifier</a>
								</td>
								<td>
									<a href="{{ path("booking_delete", {"id": booking.id}) }}" type="button" class="btn btn-danger">Supprimer</a>
								</td>
							</tr>
						{% endfor %}
					</tbody>
				</table>
			{% endfor %}
		</div>
	{% else %}
		<div class="container text-center mt-5 bg-dark rounded">
			<h1 class="text-white p-4">Vous n'avez aucune réservations</h1>
			<p class="text-white p-4">Cette page est en cours de construction</p>
		</div>
	{% endif %}
{% endblock %}
