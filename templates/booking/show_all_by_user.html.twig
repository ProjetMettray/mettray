{% extends 'base.html.twig' %}

{% block title %}La mairie de Mettray | Mes réservations
{% endblock %}

{% block body %}

	<div class="bg-prim">
		<div class="container">
			{% if (app.user.roles[0] is same as ("ROLE_ADMIN")) %}
				<div>
					<nav class="navbar navbar-expand-lg bg-prim rounded text-center d-flex justify-content-around">
						<a class="btn btn-ter ml-3" href="{{ path('location_add') }}">Ajouter une adresse</a>
						<a class="btn btn-ter ml-3" href="{{ path('room_add') }}">Ajouter une salle</a>
						<a class="btn btn-ter ml-3" href="{{ path('association_add') }}">Ajouter une association</a>
						<a class="btn btn-ter ml-3" href="{{ path('user_add') }}">Ajouter un utilisateur</a>
					</nav>
				</div>
			{% endif %}
		</div>
	</div>
	<div class="container text-center mt-5 pb-2 bg-white border border-ter rounded">
		<h1 class="p-5 text-ter">Mes Réservations</h1>
		<div class="d-flex start-flex p-4 "></div>

		{% for name,association in bookingsByAssociation %}
			<h2 class="text-ter">{{name}}</h2>
			<table class="table table-striped table-perso table-hover">
				{% if association|length == null %}
					<thead>
						<tr class="table-perso">
							<th>Pas de données</th>
						</tr>
					</thead>

					<tbody>
						<tr>
							<td>Pas de données</td>
						</tr>
					</tbody>
				{% else %}
					<thead>
						<tr class="table-perso">
							<th scope="col">N°</th>
							<th scope="col">Type de réservation</th>
							<th scope="col">Date de début</th>
							<th scope="col">Date de fin</th>
							<th scope="col">Salle</th>
							<th scope="col">Status</th>
							<th scope="col">Nom de l'association</th>
							<th scope="col">Modifier</th>
							<th scope="col">Supprimer</th>
						</tr>
					</thead>

				{% endif %}

				<tbody>

					{% for booking in association %}

						<tr class="table-active ts">

							<td>{{booking.id}}</td>
							<td>{{booking.title}}</td>
							<td>{{booking.startAt|date('d/m/Y')}}</td>
							<td>{{booking.endAt|date('d/m/Y')}}</td>
							<td>{{booking.getRoom().getName()}}</td>
							<td>{{booking.status}}</td>
							<td>
								{% if booking.getAssociation() %}
									{{booking.getAssociation().getName()}}
								{% endif %}
							</td>
							<td>
								<a href="{{ path("booking_edit", {"id": booking.id}) }}" type="button" class="btn fc-button-primary">Modifier</a>
							</td>
							<td>
								<a href="{{ path("booking_delete", {"id": booking.id}) }}" type="button" class="btn btn-danger">Supprimer</a>
							</td>
						</tr>
					{% endfor %}
				</tbody>
			</table>
		{% endfor %}
	</div>

{% endblock %}
