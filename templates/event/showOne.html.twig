{% extends 'base.html.twig' %}

{% block title %}Event
{% endblock %}

{% block body %}
	<h1>Event</h1>

	<table class="table">
		<tbody>
			{{dump(event)}}
			<tr>
				<th>Id</th>
				<td>{{ event.id }}</td>
			</tr>
			<tr>
				<th>Title</th>
				<td>{{ event.title }}</td>
			</tr>
			<tr>
				<th>Start_at</th>
				<td>{{ event.startAt ? event.startAt|date('Y-m-d H:i:s') : '' }}</td>
			</tr>
			<tr>
				<th>End_at</th>
				<td>{{ event.endAt ? event.endAt|date('Y-m-d H:i:s') : '' }}</td>
			</tr>
			<tr>
				<th>Options</th>
				<td>{{ event.options ? event.options|json_encode : '' }}</td>
			</tr>
			<tr>
				<th>Status</th>
				<td>{{ event.status }}</td>
			</tr>
		</tbody>
	</table>
	<a href="{{ path('event') }}">back to list</a>
	{% if is_granted("event_edit",event) %}
		<a href="{{ path('event_edit', {'id': event.id}) }}">edit</a>
	{% endif %}

	{{ include('event/_delete_form.html.twig') }}
{% endblock %}
