{% extends 'base.html.twig' %}

{% block title %}Hello MainController!
{% endblock %}

{% block body %}

	<div class="container">
		<div class="row d-flex justify-content-center mt-2">
		{% if (app.user.roles[0] is same as ("ROLE_ADMIN")) %}
			<nav class="navbar navbar-expand-lg navbar-light bg-secondary mt-0 rounded">
				<a class="btn btn-light ml-3" href="{{ path('location_add') }}">Ajouter une adresse</a>
				<a class="btn btn-light ml-3" href="{{ path('room_add') }}">Ajouter une salle</a>
				<a class="btn btn-light ml-3" href="{{ path('association_add') }}">Ajouter une association</a>
				<a class="btn btn-light ml-3" href="{{ path('user_add') }}">Ajouter un utilisateur</a>
			</nav>
			{% endif %}
			<div class="col">
				{% if app.user %}
					{% if is_granted('ROLE_USER') %}
						<h2 class="m-4">Mes salles</h2>
						{% for associations in asso %}
							{% for assoUser in associations.associationUsers %}
								{%  if app.user.id == assoUser.user.id%}
									<div class="m-3 card" style="width: 18rem;">
										<div class="card-header">
											{{associations.name}}
										</div>
										<ul class="list-group list-group-flush">
											{% set foo = 0 %}
											{% for rooms in associations.roomAssociations %}
												{% set foo = foo + 1 %}
												<li class="list-group-item">
													Salle :
													<a href="{{path("main_room",{'id': rooms.room.id})}}" class="text-white btn btn-secondary">{{rooms.room.name}}</a>
													<a class="btn align-items-end" data-bs-toggle="collapse" href="#collapseExample{{foo}}" role="button" aria-expanded="false" aria-controls="collapseExample{{foo}}" href="{{path('main')}}">
														<i class="fas fa-eye "></i>
													</a>
													<div class="collapse" id="collapseExample{{foo}}">
														<div class="card card-body">
															<ul class="list-group">
																<li class="text-secondary">Description:
																	<span class="text-dark">{{rooms.room.description}}</span>
																</li>
																<li class="text-secondary">Nombres de places:
																	<span class="text-dark">{{rooms.room.nbPlace}}</span>
																</li>
																<li class="text-secondary">Localisation:
																	<span class="text-dark">{{rooms.room.location}}</span>
																</li>
															</ul>
														</div>
													</div>
												</li>
											{% endfor %}
										</ul>
									</div>
								{% endif %}
							{% endfor %}
						{% endfor %}
					{% endif %}
					{% if is_granted('ROLE_ADMIN') %}
						<div class="m-3 card" style="width: 18rem;">
							<div class="card-header">
								Liste des salles
							</div>
							<ul class="list-group list-group-flush">
								{% for rooms in room %}
									<li class="list-group-item">
										Salle :
										<a href="{{path("main_room",{'id': rooms.id})}}" class="text-white btn btn-secondary">{{rooms.name}}</a>
									</li>
								{% endfor %}
							</ul>
						</div>
					{% endif %}
				{% endif %}
			</div>
			<div class="row text-center">
				<div class="col">
					<h2 class="mt-3 text-center">Salle:
						{{roomid.name}}
					</h2>
					<a href="{{ path("booking_new", {'room': roomid.id}) }}" class="text-white btn btn-primary">RÃ©server</a>
					<div class="p-0 container" style="width: 720px; margin: 2rem">
						<div id="calendar-holder"></div>
					</div>
				</div>
			</div>
			<div class="col">
				<div class="p-0 container" style="width: 548px; margin: 5rem">
					<div id="calendar-holder"></div>
					<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
						<div class="modal-dialog">
							<div class="modal-content">
								<div class="modal-header">
									<h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
									<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close">X</button>
								</div>
								<div class="modal-body">
									<p id="date"></p>
									<p id="phone"></p>
									<p id="email"></p>
								</div>
								<div class="modal-footer">
									<button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Fermer</button>
									<a id='edit-booking' type="button" class="btn btn-primary">Editer</a>
								</div>
							</div>
						</div>
					</div>
				</div>
			{% endblock %}
