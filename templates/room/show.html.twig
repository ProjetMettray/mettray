{% extends 'base.html.twig' %}

{% block title %}Infos de la salle | Mettray
{% endblock %}

{% block body %}
	{% for room in rooms %}
		<h1>{{ room.name }}</h1>

		<hr>

		<div class="row">
			<div class="col-6">
				<p>{{ room.description }}</p>
			</div>
			<div class="col-2">
				<p>{{ room.nbPlace }}</p>
			</div>
			<div class="col-2">
				<p>{{ room.location }}</p>
			</div>
			<div class="col-2">
				<p>{{ room.room.getName() }}</p>
			</div>
		</div>
	{% endfor %}

{% endblock %}
